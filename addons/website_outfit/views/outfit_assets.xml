<odoo>

    <template id="latest_outfit_snippet_options" inherit_id="website.snippets">
        <xpath expr="//t[@id='installed_snippets_hook']" position="before">
            <t snippet-group="outfits_group" t-snippet="website.s_snippet_group" string="Outfits" t-thumbnail="/website_outfit/static/description/icon.png"/>
        </xpath>
        <xpath expr="//snippets[@id='snippet_structure']" position="inside">
            <t t-snippet="website_outfit.snippet_latest_outfits"
               string="Laatste Outfits"
               group="outfits_group"
               t-thumbnail="/website_outfit/static/description/icon.png">
                <keywords>outfit, kleding, collectie, nieuw</keywords>
            </t>
        </xpath>
    </template>

    <template id="load_dynamic_snippet_assets" inherit_id="website.layout" name="Load Dynamic Snippet Assets">
        <xpath expr="//head" position="inside">
            <t t-call-assets="website.assets_dynamic_snippets"/>
        </xpath>
    </template>

</odoo>
