<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_sendcloud" model="ir.ui.view">
        <field name="name">res.company.form.sendcloud</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sendcloud">
                    <group>
                        <field name="is_sendcloud_enabled"/>
                        <field name="sendcloud_public_key"/>
                        <field name="sendcloud_secret_key" password="True"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>