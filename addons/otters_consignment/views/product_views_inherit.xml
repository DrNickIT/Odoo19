<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_consignment" model="ir.ui.view">
        <field name="name">product.template.form.inherit.consignment</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Inzending Details" name="consignment_details">
                    <group>
                        <group string="Koppeling">
                            <field name="submission_id" readonly="1"/>
                            <field name="consignment_supplier_id"/>
                        </group>

                        <group string="Status &amp; Einde Collectie" name="end_of_life">
                            <field name="consignment_state" widget="badge"/>
                            <separator/>
                            <field name="x_customer_preference" string="Wens klant bij niet verkocht"/>
                            <field name="x_unsold_reason" widget="radio"/>
                        </group>

                        <group string="Financieel">
                            <field name="consignment_submission_date"/>
                            <field name="consignment_payout_method"/>
                            <field name="consignment_payout_percentage" widget="percentage"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>