<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_consignment_report_pivot" model="ir.ui.view">
            <field name="name">otters.consignment.report.pivot</field>
            <field name="model">otters.consignment.report</field>
            <field name="arch" type="xml">
                <pivot string="Verkoop Rapport" disable_linking="True">
                    <field name="supplier_id" type="row"/>
                    <field name="payout_method" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="x_payout_date" optional="show"/>
                    <field name="x_is_paid_out" type="col"/>
                    <field name="price_subtotal" type="measure"/>
                    <field name="commission_amount" type="measure"/>
                    <field name="qty_sold" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_consignment_report_list" model="ir.ui.view">
            <field name="name">otters.consignment.report.list</field>
            <field name="model">otters.consignment.report</field>
            <field name="arch" type="xml">
                <list string="Verkoop Rapport" create="false" delete="false" edit="false">
                    <field name="supplier_id"/>
                    <field name="product_id"/>
                    <field name="order_id"/>
                    <field name="date"/>
                    <field name="payout_method"/>
                    <field name="price_subtotal" sum="Total"/>
                    <field name="commission_amount" sum="Total"/>
                    <field name="qty_sold" sum="Total"/>
                    <field name="x_is_paid_out"/>
                    <field name="x_payout_date" optional="show"/>
                </list>
            </field>
        </record>

        <record id="view_consignment_report_search" model="ir.ui.view">
            <field name="name">otters.consignment.report.search</field>
            <field name="model">otters.consignment.report</field>
            <field name="arch" type="xml">
                <search string="Verkoop Rapport Zoeken">
                    <field name="supplier_id"/>
                    <field name="product_id"/>
                    <separator/>
                    <filter name="filter_date" date="date" string="Datum"/>
                    <separator/>
                    <filter name="unpaid" string="Nog te Betalen" domain="[('x_is_paid_out', '=', False)]"/>
                    <filter name="paid" string="Reeds Betaald" domain="[('x_is_paid_out', '=', True)]"/>
                    <separator/>
                    <filter string="Datum Uitbetaling" name="group_payout_date" context="{'group_by': 'x_payout_date:month'}"/>
                    <filter string="Leverancier" name="group_supplier" context="{'group_by':'supplier_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Status Uitbetaling" name="group_paid_status" context="{'group_by':'x_is_paid_out'}"/>
                    <separator/>
                    <filter string="Datum (Jaar)" name="group_year" context="{'group_by':'date:year'}"/>
                    <filter string="Datum (Kwartaal)" name="group_quarter" context="{'group_by':'date:quarter'}"/>
                    <filter string="Datum (Maand)" name="group_month" context="{'group_by':'date:month'}"/>
                </search>
            </field>
        </record>

        <record id="action_mark_as_paid" model="ir.actions.server">
            <field name="name">Markeer als Uitbetaald</field>
            <field name="model_id" ref="model_otters_consignment_report"/>
            <field name="binding_model_id" ref="model_otters_consignment_report"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
# Voor elke geselecteerde regel in het rapport
for report_line in records:
    # 1. Haal de echte orderregel op
    sol = report_line.order_line_id

    # 2. Alleen doen als nog niet uitbetaald
    if not sol.x_is_paid_out:
        # 3. Pak de waarde die het rapport NU berekent (op basis van % van VANDAAG)
        current_calc = report_line.commission_amount

        # 4. Schrijf weg: Zet vinkje AAN en schrijf bedrag HARD weg
        sol.write({
            'x_is_paid_out': True,
            'x_payout_date' : datetime.date.today(),
            'x_fixed_commission': current_calc
        })
            </field>
        </record>

        <record id="action_consignment_report" model="ir.actions.act_window">
            <field name="name">Verkoop Rapport</field>
            <field name="res_model">otters.consignment.report</field>
            <field name="view_mode">list,pivot</field>
            <field name="search_view_id" ref="view_consignment_report_search"/>
        </record>

        <menuitem id="menu_consignment_report"
                  name="Verkoop Rapport"
                  parent="menu_consignment_root"
                  action="action_consignment_report"
                  sequence="11"/>
    </data>
</odoo>
