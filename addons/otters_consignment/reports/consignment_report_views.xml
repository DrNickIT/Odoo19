<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_consignment_report_pivot" model="ir.ui.view">
        <field name="name">consignment.report.pivot</field>
        <field name="model">otters.consignment.report</field>
        <field name="arch" type="xml">
            <pivot string="Consignment Verkoop Analyse" sample="1">
                <field name="supplier_id" type="row"/>
                <field name="payout_method" type="row"/> <field name="product_id" type="row"/>
                <field name="date" type="col" interval="month"/>
                <field name="price_subtotal" type="measure"/>
                <field name="commission_amount" type="measure"/>
                <field name="qty_sold" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_consignment_report_list" model="ir.ui.view">
        <field name="name">consignment.report.list</field>
        <field name="model">otters.consignment.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="supplier_id"/>
                <field name="payout_method"/> <field name="product_id"/>
                <field name="qty_sold"/>
                <field name="price_subtotal" sum="Totaal Verkocht"/>
                <field name="commission_amount" sum="Totaal Commissie"/>
            </list>
        </field>
    </record>

    <record id="action_consignment_report" model="ir.actions.act_window">
        <field name="name">Consignment Rapportage</field>
        <field name="res_model">otters.consignment.report</field>
        <field name="view_mode">pivot,list</field>
        <field name="context">{'search_default_group_by_supplier': 1}</field>
    </record>

    <menuitem
            id="menu_consignment_report"
            name="Verkoop Rapport"
            parent="otters_consignment.menu_consignment_root"
            action="action_consignment_report"
            sequence="99"/>
</odoo>
