<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_inherit_sendcloud" model="ir.ui.view">
        <field name="name">delivery.carrier.form.inherit.sendcloud</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sendcloud Configuratie" invisible="delivery_type != 'sendcloud'">
                    <group>
                        <group string="API Instellingen">
                            <field name="sendcloud_public_key"/>
                            <field name="sendcloud_secret_key" password="True"/>
                        </group>
                        <group string="Methode Instellingen">
                            <field name="sendcloud_method_type" widget="radio"/>
                            <field name="sendcloud_shipping_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
