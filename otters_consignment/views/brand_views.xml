<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_otters_brand_form" model="ir.ui.view">
        <field name="name">otters.brand.form</field>
        <field name="model">otters.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_published" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Omschrijving">
                            <field name="description"/>
                        </page>
                        <page string="Producten">
                            <field name="product_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_otters_brand_tree" model="ir.ui.view">
        <field name="name">otters.brand.list</field>
        <field name="model">otters.brand</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_count"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="action_otters_brand" model="ir.actions.act_window">
        <field name="name">Merken</field>
        <field name="res_model">otters.brand</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_otters_brand"
              name="Merken"
              parent="otters_consignment.menu_consignment_root"
              action="action_otters_brand"
              sequence="20"/>
    <menuitem id="menu_website_otters_brand"
              name="Merken"
              action="action_otters_brand"
              parent="website_sale.menu_catalog"
              sequence="25"/>
</odoo>