<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_consignment_report_pivot" model="ir.ui.view">
            <field name="name">otters.consignment.report.pivot</field>
            <field name="model">otters.consignment.report</field>
            <field name="arch" type="xml">
                <pivot string="Verkoop Rapport" disable_linking="True">
                    <field name="supplier_id" type="row"/>
                    <field name="payout_method" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="price_subtotal" type="measure"/>
                    <field name="commission_amount" type="measure"/>
                    <field name="qty_sold" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_consignment_report_list" model="ir.ui.view">
            <field name="name">otters.consignment.report.list</field>
            <field name="model">otters.consignment.report</field>
            <field name="arch" type="xml">
                <list string="Verkoop Rapport" create="false" delete="false" edit="false">
                    <field name="supplier_id"/>
                    <field name="product_id"/>
                    <field name="order_id"/>
                    <field name="date"/>
                    <field name="payout_method"/>
                    <field name="price_subtotal" sum="Total"/>
                    <field name="commission_amount" sum="Total"/>
                    <field name="qty_sold" sum="Total"/>
                </list>
            </field>
        </record>

        <record id="view_consignment_report_search" model="ir.ui.view">
            <field name="name">otters.consignment.report.search</field>
            <field name="model">otters.consignment.report</field>
            <field name="arch" type="xml">
                <search string="Verkoop Rapport Zoeken">
                    <field name="supplier_id"/>
                    <field name="product_id"/>

                    <filter name="filter_date" date="date" string="Datum"/>
                </search>
            </field>
        </record>

        <record id="action_consignment_report" model="ir.actions.act_window">
            <field name="name">Verkoop Rapport</field>
            <field name="res_model">otters.consignment.report</field>
            <field name="view_mode">pivot,list</field>
            <field name="search_view_id" ref="view_consignment_report_search"/>
        </record>

        <menuitem id="menu_consignment_report"
                  name="Verkoop Rapport"
                  parent="menu_consignment_root"
                  action="action_consignment_report"
                  sequence="2"/>
    </data>
</odoo>
