<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_consignment_label_order" model="mail.template">
            <field name="name">Consignatie: Bestelling Verzendlabels</field>
            <field name="model_id" ref="otters_consignment.model_otters_consignment_submission"/>
            <field name="subject">Bestelling verzendlabels - {{ object.name }}</field>

            <field name="email_from">{{ (user.email_formatted or object.env.company.email_formatted or '') }}</field>

            <field name="partner_to" eval="False"/>
            <field name="email_to">{{object.supplier_id.email}}</field>

            <field name="use_default_to" eval="False"/>

            <field name="description">Bevestiging van aanvraag verzendlabels</field>
            <field name="auto_delete" eval="False"/>

            <field name="body_html" type="html">
<table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 0px; background-color: white; color: #454748; border-collapse:separate;">
    <tbody>
        <tr>
            <td align="center" style="min-width: 590px;">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 0px 0px 0px; border-collapse:separate;">
                    <tr>
                        <td valign="top" style="font-size: 13px;">

                            <div style="text-align: center; margin-bottom: 20px;">
                                <img t-att-src="'/web/image/res.company/%s/logo' % object.env.company.id" style="max-height: 80px; width: auto;" alt="Logo"/>
                            </div>

                            <h1 style="color:#A9A9A9; text-align: left; font-size: 20px; font-weight: bold;">
                                Bestelling verzendlabels - Otters &amp; Flamingo's
                            </h1>

                            <p style="margin-top: 15px;">
                                Beste <t t-out="object.supplier_id.name or 'Klant'">Klant</t>,
                            </p>
                            <p>
                                Bedankt voor het bestellen van <strong><t t-out="object.label_count"/></strong> verzendlabel(s). We versturen dit zo snel mogelijk via mail.
                            </p>

                            <hr style="background-color: #e9ecef; border: 0; height: 1px; margin: 20px 0;"/>

                            <p>
                                Print het label af, en plak het op een stevige doos of zak. Zorg dat deze goed is dichtgemaakt!<br/>
                                We kijken uit naar jouw verzending!
                            </p>

                            <div style="background-color: #f8f9fa; padding: 15px; border-left: 4px solid #00A09D; margin: 20px 0;">
                                <strong>Ter info:</strong><br/>
                                <ul>
                                    <li>0-10kg</li>
                                    <li>Maximale afmetingen: lengte 150 cm</li>
                                    <li>Maximale totale grootte: 300 cm<br/>
                                        <span style="font-size: 11px; color: #6c757d;">(Berekening: lengte + 2 x breedte + 2 x hoogte)</span>
                                    </li>
                                </ul>
                            </div>

                            <p style="margin-bottom: 0px;">
                                Met vriendelijke groeten,<br/>
                                Het Otters &amp; Flamingo's-team
                            </p>

                            <div style="text-align: center; margin-top: 30px; font-size: 11px; color: #888;">
                                <t t-out="object.env.company.name"/>
                            </div>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </tbody>
</table>
            </field>
        </record>
    </data>
</odoo>