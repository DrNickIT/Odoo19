<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_consignment_confirmation" model="mail.template">
            <field name="name">Otters Verzendlabel: Aanvraag Ontvangen (Klant)</field>
            <field name="model_id" ref="otters_consignment.model_otters_consignment_submission"/>
            <field name="subject">Bestelling verzendlabels</field>
            <field name="email_from">{{ object.env.company.email_formatted }}</field>
            <field name="partner_to" eval="False"/>
            <field name="email_to">{{object.supplier_id.email}}</field>
            <field name="use_default_to" eval="False"/>
            <field name="auto_delete" eval="False"/>

            <field name="body_html" type="html">

                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 0px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px; border-collapse:separate;">
                                    <tr>
                                        <td valign="top" style="font-size: 13px;">
                                            <div style="text-align: center; margin-bottom: 20px;">
                                                <img t-att-src="'/web/image/res.company/%s/logo' % object.env.company.id" style="max-height: 80px; width: auto;" alt="Logo"/>
                                            </div>
                                            <h1 style="color:#00A09D; text-align: left; font-size: 20px; font-weight: bold;">
                                                Aanvraag goed ontvangen!
                                            </h1>
                                            <p>Beste <t t-out="object.supplier_id.name"/>,</p>
                                            <p>
                                                We hebben je aanvraag voor
                                                <strong><t t-out="ctx.get('total_bags', 1)"/></strong> verzendzak(ken) goed ontvangen.
                                            </p>
                                            <p>We controleren je gegevens. Als alles in orde is, ontvang je spoedig een e-mail met het verzendlabel.</p>
                                            <hr style="background-color: #e9ecef; border: 0; height: 1px; margin: 20px 0;"/>
                                            <p>Met vriendelijke groeten,<br/>Otters &amp; Flamingo's</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>

        <record id="mail_template_consignment_label_send" model="mail.template">
            <field name="name">Otters Verzendlabel: Hier is uw label (Klant)</field>
            <field name="model_id" ref="otters_consignment.model_otters_consignment_submission"/>
            <field name="subject">Jouw verzendlabel - {{ object.name }}</field>
            <field name="email_from">{{ object.env.company.email_formatted }}</field>
            <field name="partner_to" eval="False"/>
            <field name="email_to">{{object.supplier_id.email}}</field>
            <field name="use_default_to" eval="False"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 0px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px; border-collapse:separate;">
                                    <tr>
                                        <td valign="top" style="font-size: 13px;">
                                            <div style="text-align: center; margin-bottom: 20px;">
                                                <img t-att-src="'/web/image/res.company/%s/logo' % object.env.company.id" style="max-height: 80px; width: auto;" alt="Logo"/>
                                            </div>
                                            <h1 style="color:#00A09D; text-align: left; font-size: 20px; font-weight: bold;">
                                                Hier is je verzendlabel
                                            </h1>
                                            <p>Beste <t t-out="object.supplier_id.name"/>,</p>
                                            <p>Hierbij je verzendlabel voor inzending <strong><t t-out="object.name"/></strong>.</p>

                                            <div style="background-color: #e9ecef; padding: 15px; border-radius: 5px; text-align: center; margin: 20px 0;">
                                                <strong>ðŸ“Ž Zie bijlage voor je PDF label</strong>
                                            </div>

                                            <p>Print dit af, plak het op de doos en breng het naar een punt in de buurt.</p>

                                            <div style="background-color: #f8f9fa; padding: 15px; border-left: 4px solid #00A09D; margin: 20px 0;">
                                                <strong>Ter info:</strong><br/>
                                                <ul>
                                                    <li>0-10kg</li>
                                                    <li>Maximale afmetingen: lengte 150 cm</li>
                                                    <li>Maximale totale grootte: 300 cm<br/>
                                                        <span style="font-size: 11px; color: #6c757d;">(Berekening: lengte + 2 x breedte + 2 x hoogte)</span>
                                                    </li>
                                                </ul>
                                            </div>

                                            <hr style="background-color: #e9ecef; border: 0; height: 1px; margin: 20px 0;"/>
                                            <p>Met vriendelijke groeten,<br/>Otters &amp; Flamingo's</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>

        <record id="mail_template_consignment_admin_alert" model="mail.template">
            <field name="name">Otters Verzendlabel: Notificatie Admin</field>
            <field name="model_id" ref="otters_consignment.model_otters_consignment_submission"/>
            <field name="subject">Nieuwe aanvraag: {{ object.supplier_id.name }} ({{ ctx.get('total_bags', 1) }} zakken)</field>
            <field name="email_from">{{ object.env.company.email_formatted }}</field>
            <field name="partner_to" eval="False"/>
            <field name="email_to">{{object.supplier_id.email}}</field>
            <field name="use_default_to" eval="False"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div>
                    <p><strong>Nieuwe aanvraag via website!</strong></p>
                    <ul>
                        <li>Klant: <t t-out="object.supplier_id.name"/></li>
                        <li>Aantal zakken: <t t-out="ctx.get('total_bags', 1)"/></li>
                        <li>Methode: <t t-out="object.payout_method"/></li>
                    </ul>
                    <p><a t-att-href="'/web#id=%s&amp;model=otters.consignment.submission&amp;view_type=form' % object.id">Klik hier om te bekijken in Odoo</a></p>
                </div>
            </field>
        </record>

        <record id="mail_template_consignment_is_online" model="mail.template">
            <field name="name">Otters Verzendlabel: Staat Online (Klant)</field>
            <field name="model_id" ref="otters_consignment.model_otters_consignment_submission"/>
            <field name="subject">Hoera! Je kleding staat nu online ðŸš€ - {{ object.name }}</field>
            <field name="email_from">{{ object.env.company.email_formatted }}</field>
            <field name="partner_to" eval="False"/>
            <field name="email_to">{{object.supplier_id.email}}</field>
            <field name="use_default_to" eval="False"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 0px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <tr>
                            <td align="center" style="min-width: 590px;">
                                <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px; border-collapse:separate;">
                                    <tr>
                                        <td valign="top" style="font-size: 13px;">
                                            <div style="text-align: center; margin-bottom: 20px;">
                                                <img t-att-src="'/web/image/res.company/%s/logo' % object.env.company.id" style="max-height: 80px; width: auto;" alt="Logo"/>
                                            </div>
                                            <h1 style="color:#00A09D; text-align: left; font-size: 20px; font-weight: bold;">
                                                Je items staan online!
                                            </h1>
                                            <p>Beste <t t-out="object.supplier_id.name"/>,</p>
                                            <p>Goed nieuws! We hebben je inzending <strong><t t-out="object.name"/></strong> verwerkt.</p>
                                            <p>
                                                Er staan <strong><t t-out="object.product_count"/></strong> items te koop in de webshop.
                                                <t t-if="object.rejected_count > 0">
                                                    (Er zijn <t t-out="object.rejected_count"/> items die we helaas niet konden opnemen).
                                                </t>
                                            </p>

                                            <div style="text-align: center; margin: 30px 0;">
                                                <a t-att-href="'%s/my/consignments/%s' % (object.get_base_url(), object.id)"
                                                   style="background-color: #00A09D; color: #ffffff; padding: 12px 25px; text-decoration: none; font-weight: bold; border-radius: 5px;">
                                                    Bekijk mijn inzending
                                                </a>
                                            </div>

                                            <p>Vanaf nu kan je via je account live volgen wat er verkocht wordt.</p>
                                            <hr style="background-color: #e9ecef; border: 0; height: 1px; margin: 20px 0;"/>
                                            <p>Veel succes met de verkoop!<br/>Otters &amp; Flamingo's</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>

    </data>
</odoo>