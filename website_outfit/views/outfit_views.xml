<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="outfit_view_form" model="ir.ui.view">
        <field name="name">website.outfit.form</field>
        <field name="model">website.outfit</field>
        <field name="arch" type="xml">
            <form string="Outfit">
                <header>
                    <field name="is_published" widget="website_redirect_button"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id" options="{'no_create': False}"/>
                        <field name="website_id"/>
                        <field name="sale_ok"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Producten">
                            <field name="product_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="outfit_view_list" model="ir.ui.view">
        <field name="name">website.outfit.list</field>
        <field name="model">website.outfit</field>
        <field name="arch" type="xml">
            <list string="Outfits">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="website_id"/>
                <field name="sale_ok"/>
                <field name="is_published" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="outfit_action" model="ir.actions.act_window">
        <field name="name">Outfits</field>
        <field name="res_model">website.outfit</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="outfit_category_view_list" model="ir.ui.view">
        <field name="name">website.outfit.category.list</field>
        <field name="model">website.outfit.category</field>
        <field name="arch" type="xml">
            <list string="Categorieën" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="outfit_category_action" model="ir.actions.act_window">
        <field name="name">Categorieën</field>
        <field name="res_model">website.outfit.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="outfit_menu_root" name="Outfits" parent="website_sale.menu_catalog" sequence="10"/>
    <menuitem id="outfit_menu_list" name="Alle Outfits" parent="outfit_menu_root" action="outfit_action" sequence="10"/>
    <menuitem id="outfit_menu_cats" name="Categorieën" parent="outfit_menu_root" action="outfit_category_action" sequence="20"/>

</odoo>