<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="outfit_list_page" name="Outfits">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row">
                    <div class="col-12 text-center mb-4">
                        <h1>Onze Nieuwste Outfits</h1>
                        <p class="text-muted">Ontdek samengestelde looks, speciaal voor jou.</p>
                    </div>
                </div>

                <div class="row mb-4" t-if="categories">
                    <div class="col-12 d-flex justify-content-center flex-wrap gap-2">
                        <a href="/outfits"
                           t-attf-class="btn #{'btn-dark' if not active_category else 'btn-outline-dark'} rounded-pill px-4">
                            Alles
                        </a>
                        <t t-foreach="categories" t-as="c">
                            <a t-attf-href="/outfits/category/#{c.id}"
                               t-attf-class="btn #{'btn-dark' if active_category and active_category.id == c.id else 'btn-outline-dark'} rounded-pill px-4">
                                <t t-esc="c.name"/>
                            </a>
                        </t>
                    </div>
                </div>
                <div class="row">
                    <t t-if="not outfits">
                        <div class="col-12 text-center">
                            <div class="alert alert-info">Geen outfits gevonden in deze categorie.</div>
                        </div>
                    </t>

                    <t t-foreach="outfits" t-as="outfit">
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                <a t-att-href="outfit.website_url">
                                    <span t-field="outfit.image"
                                          t-options="{'widget': 'image', 'class': 'card-img-top', 'style': 'height: 300px; object-fit: cover;'}"/>
                                </a>

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a t-att-href="outfit.website_url" class="text-decoration-none text-dark">
                                            <span t-field="outfit.name"/>
                                        </a>
                                    </h5>

                                    <span t-if="outfit.category_id" class="badge bg-secondary mb-2 align-self-start">
                                        <t t-esc="outfit.category_id.name"/>
                                    </span>

                                    <p class="card-text text-muted flex-grow-1">
                                        <span t-field="outfit.description" t-options="{'widget': 'text', 'display_length': 100}"/>
                                    </p>

                                    <div class="d-grid gap-2">
                                        <a t-att-href="outfit.website_url" class="btn btn-outline-primary">
                                            Bekijk Outfit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <div class="row mt-4">
                    <div class="col-12 d-flex justify-content-center">
                        <t t-call="website.pager"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="outfit_detail_page" name="Outfit Detail">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container oe_structure">

                    <div class="row mt-4">

                        <div class="col-lg-6">
                            <span t-field="outfit.image" t-options="{'widget': 'image', 'class': 'img img-fluid rounded'}" />
                        </div>

                        <div class="col-lg-6">
                            <span t-if="outfit.category_id" class="badge bg-secondary mb-2">
                                <t t-esc="outfit.category_id.name"/>
                            </span>
                            <h1 t-field="outfit.name" />
                            <p t-field="outfit.description" />

                            <form action="/outfit/add_all_to_cart" method="POST" class="my-3">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="outfit_id" t-att-value="outfit.id" />
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fa fa-shopping-cart me-2"/> Hele Outfit Toevoegen
                                </button>
                            </form>

                            <hr/>
                            <h3>Onderdelen:</h3>

                            <ul class="list-group list-group-flush">
                                <t t-foreach="outfit.product_ids" t-as="product">
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <div class="d-flex align-items-center">
                                            <img t-att-src="website.image_url(product, 'image_128')"
                                                 class="img-fluid me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;"
                                                 alt="Product"/>
                                            <div>
                                                <a t-att-href="product.website_url" t-field="product.name" class="fw-bold text-decoration-none text-dark"/>
                                                <div t-field="product.list_price" class="text-muted"
                                                     t-options='{"widget": "monetary", "display_currency": request.website.currency_id}'/>
                                            </div>
                                        </div>

                                        <form action="/outfit/add_one_to_cart" method="POST" class="d-inline">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <input type="hidden" name="product_id" t-att-value="product.id"/>
                                            <input name="add_qty" value="1" type="hidden"/>
                                            <input type="hidden" name="redirect" t-att-value="outfit.website_url"/>
                                            <button type="submit" class="btn btn-light border btn-sm" title="Toevoegen">
                                                <i class="fa fa-plus"/>
                                            </button>
                                        </form>
                                    </li>
                                </t>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </t>
    </template>

    <template id="snippet_latest_outfits" name="Laatste Outfits">
        <section class="s_latest_outfits s_dynamic pt16 pb16"
                 data-oe-call="/website_outfit/snippet_content">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="text-center">Nieuwste Outfits</h2>
                        <p class="text-center text-muted">Bezig met laden...</p>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="snippet_latest_outfits_content" name="Outfit Snippet Inhoud">
        <div class="container">
            <div class="row o_grid_mode">
                <div class="col-12 mb-3">
                    <h2 class="text-center" t-esc="outfit_title"/>
                </div>
                <t t-if="not outfits">
                    <div class="col-12 text-center text-muted">Er zijn geen outfits beschikbaar.</div>
                </t>

                <t t-foreach="outfits" t-as="outfit">
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <a t-attf-href="/outfit/#{outfit.slug}">
                                <span t-field="outfit.image" t-options="{'widget': 'image', 'class': 'card-img-top object-fit-cover', 'style': 'height: 250px;'}" role="img"/>
                                <div class="card-body text-center">
                                    <h5 class="card-title text-truncate" t-field="outfit.name"/>
                                    <a t-attf-href="/outfit/#{outfit.slug}" class="btn btn-primary mt-2 btn-sm">Bekijk</a>
                                </div>
                            </a>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </template>
</odoo>